---
export interface Props {
	title: string;
	content: string;
  slug: string;
  date: string;
}

const { title, content, slug, date } = Astro.props;
---
<div class="w-full md:w-1/2 lg:w-1/3 px-4 hover:bg-slate-200 p-8">
  <div class="pb-8 md:pb-12 mb-8 md:mb-12 border-b border-gray-50">
    <h2><a href={`articulos/${slug}`} class="mb-2 text-2xl font-semibold font-heading text-blue-800">{title}</a></h2>
    <span class="text-xs text-blue-400 font-semibold">{date}</span>
    <p class="my-2 text-base leading-loose text-gray-500">{content}</p>
    <a class="text-sm uppercase font-bold text-blue-800 hover:underline" href={`articulos/${slug}`}>
      <span>Leer m&aacute;s</span>
      <span class="inline-block ml-2">
        <svg class="text-blue-500 h-3 w-3" viewBox="0 0 8 12" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M1.875 0L0 1.875L4.125 6L0 10.125L1.875 12L7.875 6L1.875 0Z"></path>
        </svg>
      </span>
    </a>
  </div>
</div>
