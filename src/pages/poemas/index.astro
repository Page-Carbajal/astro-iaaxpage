---
import Layout from '../../layouts/Layout.astro';
import PoemsCard from '../../components/post-components/PoemsCard.astro';
import {getLatestArticles} from "../../lib/strapiClient";


const posts = await getLatestArticles('poems')
---


<Layout title="Poemas de Iaax Page">

	<div class="wrapper">

    <section class="py-24 bg-blue-800"><div class="container px-4 mx-auto">
      <div class="max-w-3xl mx-auto mb-16 text-center">
        <span class="text-blue-400 uppercase font-semibold tracking-widest">Iaax Page</span>
        <h2 class="mt-6 text-4xl font-bold font-heading text-white">Poemas</h2>
      </div>
      <div class="flex flex-wrap -m-4">
        {posts.map((post: any) => (
          <PoemsCard
          title={post.attributes.title}
          slug={post.attributes.slug}
          />
        ))}
      </div>
      </div>
    </section>

	</div>


  <footer class="py-24 text-gray-800"><div class="container mx-auto px-4 mb-10">
    <div class="max-w-2xl mx-auto text-center">

      <a class="inline-block mb-10 text-white text-lg font-semibold" href="https://iaaxpage.com" target="_blank">
        <img class="h-40" src="https://stele.iaaxpage.com/wp-content/uploads/sites/2/2020/12/iaax-page-logo-large-black-no-brackground.png" alt="Iaax Page - Photo Logo" width="auto">
      </a>

      <ul class="mb-8 flex flex-wrap space-x-10 items-center justify-center text-sm">
